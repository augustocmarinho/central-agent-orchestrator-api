# Server Configuration
PORT=3000
NODE_ENV=development

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=ai_agents

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/ai_agents

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# N8N Integration
N8N_BASE_URL=http://localhost:5678
N8N_API_KEY=

# System API Keys (comma-separated) - LEGACY, use system tokens instead
# ⚠️ DEPRECATED: Prefira usar o novo sistema de tokens (npm run setup:n8n-token)
# Mantido apenas para compatibilidade com sistemas antigos
SYSTEM_API_KEYS=

# System Token Setup (para script de criação automática)
# Use: npm run setup:n8n-token para criar tokens de forma interativa
# Ou configure estas variáveis antes de executar o script:
N8N_TOKEN_NAME=N8N Production
N8N_TOKEN_DESCRIPTION=Token de sistema para integração com N8N
N8N_ALLOWED_IPS=192.168.1.100,10.0.0.0/8
API_URL=http://localhost:3000
DEFAULT_ADMIN_PASSWORD=admin123!@#

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Logging Configuration
LOG_LEVEL=info
LOG_TO_FILE=false
